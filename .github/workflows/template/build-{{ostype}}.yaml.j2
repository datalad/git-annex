        run: ssh-keygen -f ~/.ssh/id_rsa -N ""

      - name: Authorize access with these keys
        shell: pwsh
        run: |
          # For admin users, Windows OpenSSH requires keys in administrators_authorized_keys
          $authKeys = "$env:ProgramData\ssh\administrators_authorized_keys"
          Get-Content "$env:USERPROFILE\.ssh\id_rsa.pub" | Out-File -Encoding utf8 $authKeys
          # Set required permissions: only SYSTEM and Administrators
          icacls.exe $authKeys /inheritance:r /grant "Administrators:F" /grant "SYSTEM:F"

      - name: Configure SSH
        run: |
          (
            echo Host localhost
            echo StrictHostKeyChecking no
            echo Host datalad-test
            echo StrictHostKeyChecking no
            echo Host datalad-test2
            echo StrictHostKeyChecking no
          ) > "$USERPROFILE"/.ssh/config

      - name: Test login
        run: |
          ssh -v localhost exit
          ssh datalad-test exit
          ssh datalad-test2 exit

      - name: Enable SSH tests
        run: echo DATALAD_TESTS_SSH=1 >> "$GITHUB_ENV"
    {% endif %}

